@model LoginUser
<h2 class="text-center">Login</h2>
<form action="/login" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="LoginEmail" class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-8">
            <input asp-for="LoginEmail" class="form-control">
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LoginPassword" class="col-sm-4 col-form-label">Password</label>
        <div class="col-sm-8">
            <input asp-for="LoginPassword" class="form-control">
            <p><span asp-validation-for="LoginPassword" class="text-danger"></span></p>  
            <button class="btn btn-primary mt-2 ">Login</button>
        </div>
    </div>
</form>