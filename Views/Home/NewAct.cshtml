@{
    ViewData["Title"] = "New Activity";
}
@model Act
<div class="d-flex justify-content-between">
    <h1>Dojo Activity Center</h1>
    <p>
        <a href="/home">Home</a> <a href="/logout">Logout</a>
    </p>
</div>
<form action="/create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-4 col-form-label">Title</label>
        <div class="col-sm-8">
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Time" class="col-sm-4 col-form-label">Time</label>
        <div class="col-sm-8">
            <input asp-for="Time" class="form-control">
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-4 col-form-label">Date</label>
        <div class="col-sm-8">
            <input asp-for="Date" class="form-control">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Duration" class="col-sm-4 col-form-label">Duration</label>
        <div class="col-sm-8">
            <div class="row pl-3 pr-3">
                <input asp-for="Duration" min="0" class="form-control col">
                <select asp-for="DurationType" class="form-control col">
                    <option value="hours">Hours</option>
                    <option value="minutes">Minutes</option>
                    <option value="days">Days</option>
                </select>
            </div>
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-4 col-form-label">Description</label>
        <div class="col-sm-8">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <button class="btn btn-primary mt-2" type=submit>Create Activity</button>
</form>